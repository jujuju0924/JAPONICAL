.show
  .show__content
    .show__content__image
    = image_tag "#{@post.image}",size:"800x400",class: "content-middle-image"
  .show__title
    .show__title__text
      .show__title__text__explain
        .tab-wrap

          %input#TAB-01.tab-switch{checked: "checked", name: "TAB", type: "radio"}/
          %label.tab-label{for: "TAB-01"} 
            =icon('fas','smile')
          .tab-content
            = @post.name
            .show__under
            = @post.text
            .show__under__two
            - if user_signed_in? && current_user.id == @post.user_id
              .show__under__two__which
                .show__under__two__which__destroy
                  = link_to post_path(@post.id),method: :delete ,class: "mypage-image" do
                    =icon('fas','trash-alt')
                .show__under__two__which__destroy__edit
                  = link_to edit_post_path(@post.id),method: :get,class: "mypage-edit" do
                    =icon('fas','edit')
            .show-comment
              - if current_user
                .show-comment__detail
                  = form_with(model: [@post, @comment], local: true) do |form|
                    = form.text_area :text, placeholder: "コメントする", cols: "80",rows: "5",class: "show-comment_detail__form"
                    = form.submit "SEND",class: "show-comment_detail__form__submit"
              - else
                ※※※ コメントの投稿には新規登録/ログインが必要です ※※※
            .show-comment_detail__form__submit__under
              コメント一覧
              - if @comments
                - @comments.each do |comment|
                  .show-comment_detail__form__submit__under__name
                    = comment.user.name
                    = comment.text
      

          %input#TAB-02.tab-switch{name: "TAB", type: "radio"}/
          %label.tab-label{for: "TAB-02"} 
            =icon('fas','map-marker')
          .tab-content
            %div{style: "width: ;"}
              #map{style: "width: 100%; height: 300px;"}
              :javascript
                      handler = Gmaps.build('Google');
                      
                      handler.buildMap({ provider: { scrollwheel: false }, internal: {id: 'map'}}, function(){
                        markers = handler.addMarkers([
                          {
                            "lat": #{@post.latitude},
                            "lng": #{@post.longitude},
                        "infowindow": '<p>#{@post.name}</p><p>#{@post.address}</p><p>#{link_to "Googleマップで見る" ,"https://maps.google.co.jp/maps?q=loc:\#{@post.latitude},\#{@post.longitude}&iwloc=J",target: "_blank"}</p>'
                          }
                        ]);
                        handler.bounds.extendWith(markers);
                        handler.fitMapToBounds();
                        handler.getMap().setZoom(17);
                      });
                    
                    



          %input#TAB-03.tab-switch{name: "TAB", type: "radio"}/
          %label.tab-label{for: "TAB-03"} 
            %i.far.fa-heart
          .tab-content
            %div{id: "like-#{@post.id}"}
              = render "likes/like", post: @post
